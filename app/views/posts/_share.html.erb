<ul class="social-buttons">
    <li class="social-button">
        <script src="https://platform.linkedin.com/in.js" type="text/javascript">lang: en_US</script>
        <script type="IN/Share" data-url=<%= "http://www.shareattraction.com/#{post.id}#{ref_path}" %>></script>
    </li>

   
    <li class="social-button">
        <a class="twitter-share-button"
        href=<%= "#{post.twitter_link}#{ref_path}" %> >
       
        <i class="fab fa-twitter action"></i></a>
    </li>

    <li class="social-button">
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
        <div class="fb-share-button" 
            data-href="<%= "https://www.shareattraction.com/#{post.id}#{ref_path}" %>" 
            data-layout="button_count">
        </div>
    </li>
</ul>



